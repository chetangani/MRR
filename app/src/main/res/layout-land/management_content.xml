<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/management_image"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/management" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/management_txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/managementtxt1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/management_txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/managementtxt2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/management_txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/managementtxt3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/management_txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/managementtxt4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/management_txt_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/managementtxt5"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/management_txt_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/managementtxt6"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/management_txt_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/managementtxt7"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/management_txt_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/managementtxt8"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>